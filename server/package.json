{
  "name": "personal-website",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "cd dist && NODE_ENV=production node ./bin/www",
    "build": "tsc && npm run build --prefix ../client && rm -rf dist/build/ && mv ../client/build/ dist/build/",
    "client": "cd ../client && npm start",
    "server": "concurrently --kill-others-on-fail \"tsc -w --preserveWatchOutput\" \"cd dist && nodemon ./bin/www.js\"",
    "dev": "concurrently --kill-others-on-fail \"npm run server\" \"npm run client\""
  },
  "dependencies": {
    "connect-mongodb-session": "^2.1.1",
    "cookie-parser": "~1.4.3",
    "debug": "~2.6.9",
    "dotenv": "^6.2.0",
    "express": "~4.16.0",
    "express-session": "^1.15.6",
    "mongoose": "^5.4.10",
    "morgan": "~1.9.0",
    "passport": "^0.4.0",
    "passport-google-oauth": "^1.0.0"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.1",
    "@types/debug": "^4.1.0",
    "@types/dotenv": "^6.1.0",
    "@types/express": "^4.16.1",
    "@types/mongodb": "^3.1.19",
    "@types/mongoose": "^5.3.12",
    "@types/morgan": "^1.7.35",
    "@types/passport": "^1.0.0",
    "@types/passport-google-oauth": "^1.0.39",
    "concurrently": "^4.1.0",
    "nodemon": "^1.18.10",
    "tslint": "^5.12.1",
    "typescript": "^3.3.3"
  },
  "engines": {
    "node": "^10.0.0",
    "npm": "^6.7.0"
  }
}
